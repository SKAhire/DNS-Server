{
  "compilerOptions": {
    "target": "ES6",                         // JavaScript version to compile to
    "module": "commonjs",                     // Module system (CommonJS is used in Node.js)
    "rootDir": "./src",                       // Root directory of TypeScript files
    "outDir": "./dist",                       // Output directory for compiled JavaScript
    "esModuleInterop": true,                  // Allows default imports for CommonJS modules
    "strict": true                            // Enable strict type-checking
  },
  "exclude": [
    "node_modules"
  ]
}

